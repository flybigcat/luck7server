        each award, i in achievements
            li
               = 'Using '+ award.cash + ', get '+ award.win+ ' with ' + ['7','lucky 7','cheery','3 bar','2 bar','1 bar'][6 - award.row1] + ' ' + ['7','lucky 7','cheery','3 bar','2 bar','1 bar'][6 - award.row2] + ' ' + ['7','lucky 7','cheery','3 bar','2 bar','1 bar'][6 - award.row3]
